extends layout

block content 
    div(class='min-vh-100 d-flex container-fluid justify-content-center align-items-center')
        div(class='card w-75' style='min-height: 75vh;')
            div(class='card-body d-flex flex-column')
                form(class='mb-3 input-group', method='post', action='/')
                    input(type='text' class='form-control' placeholder='Enter a text' name='anytext')
                    button(class='btn btn-primary', type='submit') Submit
                div(class='dropdown mb-3')
                    button(class='btn btn-secondary dropdown-toggle', type='button', id='dropdownMenuButton1', data-bs-toggle='dropdown') Past queries
                    ul(class='dropdown-menu', aria-labelledby='dropdownMenuButton1')
                        if queries 
                            each query in queries
                                li
                                    button(class='dropdown-item') #{query}
                        else 
                            li(class='dropdown-item') No queries yet
                div(class='d-flex gap-2 flex-grow-1 flex-wrap')
                    if data 
                        pre(class='p-3 border w-100 overflow-y-auto', style='height: 500px; min-height: inherit; max-height: 500px; white-space: pre-wrap;') #{JSON.stringify(data.original)} 
                        pre(class='p-3 border w-100 overflow-y-auto', style='height: 500px; min-height: inherit; max-height: 500px; white-space: pre-wrap;') #{JSON.stringify(data.transformed)}
